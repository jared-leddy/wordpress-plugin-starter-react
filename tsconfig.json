{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["vite/client"],
    "useDefineForClassFields": true
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.ts",
    "src/**/**/*.d.ts",
    "src/**/**/**/*.d.ts",
    "src/*.vue",
    "src/**/*.vue",
    "src/**/**/*.vue",
    "src/**/**/**/*.vue"
  ]
}
